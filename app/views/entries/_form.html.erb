<%= form_for [@journey, @entry] do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <h2>Location</h2>
  <div id="map"></div>

  <div class="field">
    <%= f.label :body %><br>
    <%= f.cktext_area :body %>
  </div>

  <%= f.hidden_field :latitude %>
  <%= f.hidden_field :longitude %>
  <%= f.hidden_field :journey_id, value: @journey.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<div id="other_entries" style="display: none;">
<% @journey.entries.each_with_index do |entry, index| %>
  <% if not entry.new_record? %>
    <div id="entry-<%= index %>" class="entry">
      <ul>
        <li class="location"><%= entry.latitude %>,<%= entry.longitude %></li>
        <li class="title"><%= entry.title %></li>
      </ul>
    </div>
  <% end %>
<% end %>
</div>
