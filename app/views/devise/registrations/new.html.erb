<div class="row">
  <div class="title-bar with-spacing col-xs-12">
    <h2>Sign up</h2>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-lg-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <div><%= f.label :username %><br />
        <%= f.text_field :username, class: "form-control", autofocus: true, class: "form-control" %></div>
      </div>

      <div class="form-group">
        <div><%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control" %></div>
      </div>

      <div class="form-group">
        <div><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control"%></div>
      </div>

      <div class="form-group">
        <div><%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %></div>
      </div>

      <div><%= f.submit "Sign up", class: "btn btn-primary" %></div>
    <% end %>
  </div>
</div>

<br>
<%= render "devise/shared/links" %>
