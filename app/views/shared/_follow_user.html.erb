<% if user_signed_in? %>
  <% unless current_user == @owner %>
      <% if current_user.following?(@owner) %>
        <%= link_to "Unfollow",
          {controller: "users", action: "unfollow_user",
           id: current_user.id, follow_id: @owner.id}, id: "follow-user", remote: true %>
      <% else %>
        <%= link_to "Follow",
          {controller: "users", action: "follow_user",
           id: current_user.id, follow_id: @owner.id}, id: "follow-user", remote: true %>
      <% end %>
    <% end %>
<% else %>
  <%= link_to 'Sign In', new_user_session_path %> to follow this User
<% end %>
