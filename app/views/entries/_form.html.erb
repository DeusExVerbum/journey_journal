<%= form_for [@journey, @entry] do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div id="latitude_field" class="field">
    <%= f.label :latitude %> <%= link_to 'Find me', '/assets/entries.js', id: 'findMe' %>
    <br>
    <%= f.text_field :latitude %>
  </div>
  <div id="longitude_field" class="field">
    <%= f.label :longitude %><br>
    <%= f.text_field :longitude %>
  </div>


  <%= f.hidden_field :journey_id, value: @journey.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
